        "Kid_or_Name": {
            "AllowValues": "Name, Kid",
            "Default": "Name",
            "Description": "Change the way Mr. Qi will treat you. He may refer to you as 'Kid' or your name. Default is your name."
        }
    },
    "DynamicTokens": [
        {
            "Name": "NameOrKid",
            "Value": "{{i18n:KidOrNameToken.NameOption}}",
            "When": {
                "Kid_or_Name": "Name"
            }
        },
        {
            "Name": "NameOrKid",
            "Value": "{{i18n:KidOrNameToken.KidOption}}",
            "When": {
                "Kid_or_Name": "Kid"
            }
