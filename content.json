{
    "Format": "2.0.0",
    "ConfigSchema": {
        "Kid_or_Name": {
            "AllowValues": "Name, Kid",
            "Default": "Name",
            "Description": "Change the way Mr. Qi will treat you. He may refer to you as 'Kid' or your name. Default is your name."
        }
    },
    "DynamicTokens": [
        {
            "Name": "NameOrKid",
            "Value": "{{i18n:KidOrNameToken.NameOption}}",
            "When": {
                "Kid_or_Name": "Name"
            }
        },
        {
            "Name": "NameOrKid",
            "Value": "{{i18n:KidOrNameToken.KidOption}}",
            "When": {
                "Kid_or_Name": "Kid"
            }
        }
    ],
    "Changes": [
        //Mr. Qi's Sprite & Portrait
        {
            "Action": "Load",
            "Target": "Characters/Qi, Portraits/Qi",
            "FromFile": "Assets/{{TargetPathOnly}}/Qi.png"
        },
        //Non Giftable Mr. Qi Patch
        {
            "Action": "Include",
            "FromFile": "Data/NonGiftableData.json"
        },
        //NPC Data
        {
            "Action": "EditData",
            "Target": "Data/Characters",
            "Entries": {
                "Qi": {
                    "DisplayName": "{{i18n:Qi.name}}",
                    "Gender": "Male",
                    "BirthSeason": "winter",
                    "BirthDay": 27,
                    "Age": "Adult",
                    "Manner": "Neutral",
                    "SocialAnxiety": "Neutral",
                    "Optimism": "Neutral",
                    "HomeRegion": "Desert",
                    "CanSocialize": "true",
                    "CanBeRomanced": "false",
                    "CanCommentOnPurchasedShopItems": "false",
                    "CanGreetNearbyCharacters": "false",
                    "CanVisitIsland": "false",
                    "Calendar": "HiddenUntilMet",
                    "SocialTab": "HiddenUntilMet",
                    "PerfectionScore": "false",
                    "EndSlideShow": "Hidden",
                }
            }
        },
        //NPC Data (if romanceable route is unlocked)
        {
            "Action": "EditData",
            "Target": "Data/Characters",
            "Entries": {
                "Qi": {
                    "DisplayName": "{{i18n:Qi.name}}",
                    "Gender": "Male",
                    "BirthSeason": "winter",
                    "BirthDay": 27,
                    "Age": "Adult",
                    "Manner": "Neutral",
                    "SocialAnxiety": "Neutral",
                    "Optimism": "Neutral",
                    "HomeRegion": "Desert",
                    "CanSocialize": "true",
                    "CanBeRomanced": "true",
                    "CanCommentOnPurchasedShopItems": "false",
                    "CanGreetNearbyCharacters": "false",
                    "CanVisitIsland": "false",
                    "Calendar": "HiddenUntilMet",
                    "SocialTab": "HiddenUntilMet",
                    "PerfectionScore": "false",
                    "EndSlideShow": "Hidden"
                }
            },
            "When": {
                "HasFlag": "RomanceableQiRoute"
            }
        },
        //Gift Tastes
        {
            "Action": "EditData",
            "Target": "Data/NPCGiftTastes",
            "Entries": {
                "Qi": "{{i18n:Qi.GiftReactions.Love|NameOrKid={{NameOrKid}}}}/773 107 205 243 151 578 910/{{i18n:Qi.GiftReactions.Like}}/211 162 798 218 903/{{i18n:Qi.GiftReactions.Dislike}}/-7 -26/{{i18n:Qi.GiftReactions.Hate}}/729 253 395 348 346 303/{{i18n:Qi.GiftReactions.Neutral}}/-4 -12 -2/"
            }
        },
        //Dialogue
        {
            "Action": "Load",
            "Target": "Characters/Dialogue/Qi",
            "FromFile": "Data/Empty.json"
        },
        {
            "Action": "Include",
            "FromFile": "Assets/Dialogue/Qi.json"
        },
        //Other NPCs Dialogue
        {
            "Action": "Include",
            "FromFile": "Assets/Dialogue/OtherNPCsDialogue.json"
        },
        //Schedule
        {
            "Action": "Load",
            "Target": "Characters/Schedules/Qi",
            "FromFile": "Data/Empty.json"
        },
        {
            "Action": "Include",
            "FromFile": "Assets/Schedules/Qi.json"
        },
        //Animation Descriptions
        {
            "Action": "EditData",
            "Target": "Data/animationDescriptions",
            "Entries": {
                "qi_staring": "20/20/20",
                "qi_sleep": "51/51/51"
            }
        },
        //Map Edits
        {
            "Action": "EditMap",
            "Target": "Maps/Club",
            "FromFile": "Assets/Maps/Club.tmx",
            "AddWarps": [
                "33 60 Custom_MrQiReal_QiRoom 1 0",
                "34 60 Custom_MrQiReal_QiRoom 1 0",
                "8 60 SandyHouse 17 2"
            ]
        },
        {
            "Action": "EditMap",
            "Target": "Maps/Custom_MrQiReal_QiRoom",
            "AddWarps": [
                "12 13 Custom_MrQiReal_QiLab 9 0"
            ]
        },
        {
            "Action": "EditMap",
            "Target": "Maps/Custom_MrQiReal_QiRoom",
            "MapTiles": [
                {
                    "Layer": "Back",
                    "Position": { "X": 12, "Y": 12 },
                    "SetProperties": {
                        "Passable": "true"
                    }
                }
            ],
				"When": {
                "Hearts:Qi": "{{Range: 0, 5}}",
                "LocationName": "Club, Custom_MrQiReal_QiRoom"
            },
            "Update": "OnLocationChange"
        },
        {
            "Action": "EditMap",
            "Target": "Maps/SandyHouse",
            "AddWarps": [
                "17 1 Club 8 59"
            ]
        },
        //Map Strings
        {
            "Action": "Include",
            "FromFile": "Assets/Strings/MapStrings.json"
        },
        //Schedule Strings
        {
            "Action": "Load",
            "Target": "Strings/schedules/Qi",
            "FromFile": "Data/Empty.json"
        },
        {
            "Action": "Include",
            "FromFile": "Assets/Strings/ScheduleStrings.json"
        },
        //Events
        {
            "Action": "Load",
            "Target": "Data/Events/Club, Data/Events/SkullCave, Data/Events/Custom_MrQiReal_QiRoom, Data/Events/Custom_MrQiReal_QiLab",
            "FromFile": "Data/Empty.json"
        },
        {
            "Action": "Include",
            "FromFile": "Assets/Events/Events.json"
        },
        //Festival Locations
        {
            "Action": "Include",
            "FromFile": "Data/FestivalData/FestivalLocations.json"
        },
        //Festival Dialogue
        {
            "Action": "Include",
            "FromFile": "Data/FestivalData/FestivalDialogue.json"
        },
        //Letters
        {
            "Action": "EditData",
            "Target": "Data/TriggerActions",
            "Entries": {
                //Sends a letter to you when you have 8 hearts with Mister Qi to trigger the 8 hearts event
                "MrQiRealNPC_QiImportantTalk": {
                    "Id": "MrQiRealNPC_QiImportantTalk",
                    "Trigger": "DayStarted",
                    "Condition": "PLAYER_HEARTS Current Qi 8",
                    "Action": "AddMail Current QiImportantTalk now"
                }
            }
        },
        {
            "Action": "EditData",
            "Target": "Data/mail",
            "Entries": {
                "QiImportantTalk": "{{i18n:MailLetter.QiImportantTalk}}"
            }
        },
        //Custom Locations
        {
            "Action": "EditData",
            "Target": "Data/Locations",
            "Entries": {
                "Custom_MrQiReal_QiRoom": {
                    "DisplayName": "{{i18n:Location.QiRoom}}",
                    "DefaultArrivalTile": {
                        "X": 1,
                        "Y": 0
                    },
                    "CreateOnLoad": {
                        "MapPath": "Maps/Custom_MrQiReal_QiRoom"
                    }
                },
                "Custom_MrQiReal_QiLab": {
                    "DisplayName": "{{i18n:Location.QiLab}}",
                    "DefaultArrivalTile": {
                        "X": 9,
                        "Y": 0
                    },
                    "CreateOnLoad": {
                        "MapPath": "Maps/Custom_MrQiReal_QiLab"
                    }
                }
            }
        }
    ],
    "CustomLocations": [
        {
            "Name": "Custom_MrQiReal_QiRoom",
            "FromMapFile": "Assets/Maps/QiRoom.tmx"
        },
        {
            "Name": "Custom_MrQiReal_QiLab",
            "FromMapFile": "Assets/Maps/QiLab.tmx"
        }
    ]
}